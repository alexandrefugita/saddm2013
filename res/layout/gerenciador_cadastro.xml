<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <ScrollView
        android:id="@+id/gerenciador_cadastro_scrollView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" >

        <RelativeLayout
            android:id="@+id/gerenciador_cadastro_relative_layout"
            android:layout_width="302dp"
            android:layout_height="534dp" >

            <TextView
                android:id="@+id/gerenciador_cadastro_mensagem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:text="Cadastro de usuÃ¡rio" />

            <TextView
                android:id="@+id/gerenciador_cadastro_label_nome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/gerenciador_cadastro_mensagem"
                android:layout_marginLeft="29dp"
                android:layout_marginTop="16dp"
                android:text="Nome Completo"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <EditText
                android:id="@+id/gerenciador_cadastro_campo_nome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/gerenciador_cadastro_label_nome"
                android:layout_below="@+id/gerenciador_cadastro_label_nome"
                android:layout_marginTop="14dp"
                android:ems="10"
                android:inputType="textPersonName" >

                <requestFocus />
            </EditText>

            <TextView
                android:id="@+id/gerenciador_cadastro_label_cpf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/gerenciador_cadastro_campo_nome"
                android:layout_below="@+id/gerenciador_cadastro_campo_nome"
                android:layout_marginTop="13dp"
                android:text="CPF"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <EditText
                android:id="@+id/gerenciador_cadastro_campo_cpf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/gerenciador_cadastro_label_cpf"
                android:layout_below="@+id/gerenciador_cadastro_label_cpf"
                android:layout_marginTop="15dp"
                android:ems="10"
                android:inputType="number" />

            <TextView
                android:id="@+id/gerenciador_cadastro_label_datanasc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/gerenciador_cadastro_campo_cpf"
                android:layout_below="@+id/gerenciador_cadastro_campo_cpf"
                android:layout_marginTop="13dp"
                android:text="Data de nascimento"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <EditText
                android:id="@+id/gerenciador_cadastro_campo_datanasc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/gerenciador_cadastro_label_datanasc"
                android:layout_below="@+id/gerenciador_cadastro_label_datanasc"
                android:layout_marginTop="11dp"
                android:ems="10"
                android:inputType="date" />

            <Button
                android:id="@+id/gerenciador_cadastro_botao_enviar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="@+id/gerenciador_cadastro_campo_datanasc"
                android:layout_below="@+id/gerenciador_cadastro_label_datanasc"
                android:layout_marginTop="70dp"
                android:onClick="verificar"
                android:text="Cadastrar" />
            
            <Button
                android:id="@+id/gerenciador_cadastro_botao_voltar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/gerenciador_cadastro_campo_datanasc"
                android:layout_below="@+id/gerenciador_cadastro_label_datanasc"
                android:layout_marginTop="70dp"
                android:onClick="voltar"
                android:text="Voltar" />
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>