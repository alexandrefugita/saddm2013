<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <Button
        android:id="@+id/main_activity_cadastrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/main_activity_msg"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:onClick="cadastrar"
        android:text="Cadastrar" />

    <Button
        android:id="@+id/main_activity_send_file"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/main_activity_sign"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:onClick="sendFile"
        android:text="Enviar Arquivos" />

    <TextView
        android:id="@+id/main_activity_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:text="Bem Vindo ao Sistema de Assinatura Digital"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <Button
        android:id="@+id/main_activity_sign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/main_activity_gerar_pub"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:onClick="sign"
        android:text="Assinar" />

    <Button
        android:id="@+id/main_activity_gerar_pub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/main_activity_cadastrar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:onClick="chavePub"
        android:text="Gerar Chave PÃºblica" />

    <Button
        android:id="@+id/main_activity_verify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/main_activity_cadastrar"
        android:layout_below="@+id/button1"
        android:layout_marginTop="14dp"
        android:onClick="verify"
        android:text="Verificar" />

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/main_activity_send_file"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:onClick="receiveFile"
        android:text="Receber Arquivos" />

</RelativeLayout>