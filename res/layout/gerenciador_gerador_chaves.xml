<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >
	
   	<TextView 
   		android:id="@+id/gerador_chaves_titulo"
   		android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
   		android:layout_centerHorizontal="true"
   		android:layout_marginTop="15dp"  
   		android:text="Geração a Chave Pública"
        android:textAppearance="?android:attr/textAppearanceMedium" /> 
        
   	<TextView 
   		android:id="@+id/gerador_chaves_msg"
   		android:layout_width="wrap_content"
        android:layout_height="wrap_content"
   		android:layout_centerHorizontal="true"
   		android:layout_below="@+id/gerador_chaves_titulo"
   		android:layout_marginTop="15dp"  
   		android:text="A chave pública será adicionada no cartão externo na pasta /Saddm2013/Chaves/"
        android:textAppearance="?android:attr/textAppearanceSmall" /> 
    
    <Button
    	android:id="@+id/gerador_chaves_botao_gerar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gerador_chaves_titulo" 
        android:layout_marginTop="75dp"
        android:layout_centerHorizontal="true"
        android:onClick="gerarChaves"
        android:text="Gerar Chaves" />
     
      <Button
        android:id="@+id/gerador_chaves_botao_voltar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/gerador_chaves_botao_gerar"
        android:layout_alignRight="@+id/gerador_chaves_botao_gerar"
        android:layout_below="@+id/gerador_chaves_botao_gerar" 
        android:layout_marginTop="20dp"
        android:onClick="voltar"
        android:text="Voltar Menu Principal" />
      
      <Button
        android:id="@+id/gerador_chaves_botao_teste"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/gerador_chaves_botao_gerar"
        android:layout_alignRight="@+id/gerador_chaves_botao_gerar"
        android:layout_below="@+id/gerador_chaves_botao_voltar" 
        android:layout_marginTop="40dp"
        android:onClick="testeChave"
        android:text="Teste Chave" />
     
</RelativeLayout>