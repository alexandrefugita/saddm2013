<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/gerenciador_cadastro_chave_aleatoria_titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="A sua senha aleatória é:"
        android:textAppearance="?android:attr/textAppearanceSmall" />
    
    <TextView
        android:id="@+id/gerenciador_cadastro_chave_aleatoria_chave_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gerenciador_cadastro_chave_aleatoria_titulo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="senha"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold" />
    
    <TextView
        android:id="@+id/gerenciador_cadastro_chave_aleatoria_mensagem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gerenciador_cadastro_chave_aleatoria_titulo"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="42dp"
        android:text="Memorize esta senha. Ela não será mais disponibilizada posteriormente. Caso você esqueça essa senha, um novo cadastro deverá ser providenciado com a Autoridade Certificadora."
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <Button
        android:id="@+id/gerenciador_cadastro_chave_aleatoria_botao_gerar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gerenciador_cadastro_chave_aleatoria_mensagem"
         android:layout_centerHorizontal="true"
        android:layout_marginBottom="12dp"
        android:onClick="gerarAleatorio"
        android:text="Gerar Nova Senha" />
    
    <Button
        android:id="@+id/gerenciador_cadastro_chave_aleatoria_botao_voltar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/gerenciador_cadastro_chave_aleatoria_botao_gerar"
        android:layout_alignRight="@+id/gerenciador_cadastro_chave_aleatoria_botao_gerar"
        android:layout_below="@+id/gerenciador_cadastro_chave_aleatoria_botao_gerar"
        android:layout_marginTop="10dp"
        android:onClick="voltar"
        android:text="Voltar" />

    <Button
        android:id="@+id/gerenciador_chave_aleatoria_botao_confirmar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/gerenciador_cadastro_chave_aleatoria_botao_voltar"
        android:layout_alignRight="@+id/gerenciador_cadastro_chave_aleatoria_botao_voltar"
        android:layout_below="@+id/gerenciador_cadastro_chave_aleatoria_botao_voltar"
        android:layout_marginTop="10dp"
        android:onClick="confirmar"
        android:text="Confirmar" />
    
</RelativeLayout>