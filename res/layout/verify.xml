<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <ScrollView
        android:id="@+id/verify_scrollView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" >

        <RelativeLayout
            android:id="@+id/verify_relative_layout"
            android:layout_width="302dp"
            android:layout_height="400dp" >

            <TextView
                android:id="@+id/verify_mensagem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:text="Verificiar Assinatura" />

            <TextView
                android:id="@+id/verify_label_chooseFile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/verify_mensagem"
                android:layout_marginTop="20dp"
                android:text="Escolher arquivo a ser verificado"
                android:textAppearance="?android:attr/textAppearanceSmall" />
            
		 	<Button
                android:id="@+id/signer_button_choosefile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/verify_label_chooseFile"
                android:layout_marginTop="10dp"
                android:onClick="chooseFile"
                android:text="Arquivo" />
		 	
		 	<TextView
                android:id="@+id/verify_label_chooseSignatura"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/signer_button_choosefile"
                android:layout_marginTop="20dp"
                android:text="Escolher assinatura a ser verificada"
                android:textAppearance="?android:attr/textAppearanceSmall" />
            
		 	<Button
                android:id="@+id/signer_button_chooseSignature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/verify_label_chooseSignatura"
                android:layout_marginTop="10dp"
                android:onClick="chooseSignature"
                android:text="Arquivo" />
            
     
            <Button
                android:id="@+id/verify_botao_verifica"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/signer_button_chooseSignature"
                android:layout_marginTop="20dp"
                android:onClick="verifica"
                android:text="Verifica" />

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>