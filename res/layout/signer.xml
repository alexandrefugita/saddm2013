<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <ScrollView
        android:id="@+id/gerenciador_cadastro_scrollView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" >

        <RelativeLayout
            android:id="@+id/gerenciador_cadastro_relative_layout"
            android:layout_width="302dp"
            android:layout_height="400dp" >

            <TextView
                android:id="@+id/signer_mensagem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:text="Assinar Arquivo" />

            <TextView
                android:id="@+id/signer_label_chooseFile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/signer_mensagem"
                android:layout_marginTop="20dp"
                android:text="Escolher arquivo a ser assinado"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <Button
                android:id="@+id/signer_button_choosefile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/signer_label_chooseFile"
                android:layout_marginTop="10dp"
                android:onClick="chooseFile"
                android:text="Arquivo" />

            <TextView
                android:id="@+id/signer_label_senha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/signer_button_choosefile"
                android:layout_below="@+id/signer_button_choosefile"
                android:layout_marginTop="30dp"
                android:text="Senha"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <EditText
                android:id="@+id/signer_campo_senha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/signer_label_senha"
                android:layout_below="@+id/signer_label_senha"
                android:layout_marginTop="10dp"
                android:ems="10"
                android:inputType="textPassword" />

            <TextView
                android:id="@+id/signer_label_confirma_senha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/signer_campo_senha"
                android:layout_below="@+id/signer_campo_senha"
                android:layout_marginTop="10dp"
                android:text="Confirmar senha"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <EditText
                android:id="@+id/signer_campo_confirma_senha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/signer_label_confirma_senha"
                android:layout_below="@+id/signer_label_confirma_senha"
                android:layout_marginTop="10dp"
                android:ems="10"
                android:inputType="textPassword" />

            <TextView
                android:id="@+id/signer_label_senha_aleatoria"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/signer_campo_confirma_senha"
                android:layout_below="@+id/signer_campo_confirma_senha"
                android:layout_marginTop="10dp"
                android:text="Senha AleatÃ³ria"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <EditText
                android:id="@+id/signer_campo_senha_aleatoria"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/signer_label_senha_aleatoria"
                android:layout_below="@+id/signer_label_senha_aleatoria"
                android:layout_marginTop="10dp"
                android:ems="10"
                android:inputType="textPassword" />

            <Button
                android:id="@+id/signer_botao_enviar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/signer_campo_senha_aleatoria"
                android:layout_below="@+id/signer_campo_senha_aleatoria"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="10dp"
                android:onClick="sign"
                android:text="Assinar" />
            
            <Button
                android:id="@+id/signer_botao_voltar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/signer_campo_senha_aleatoria"
                android:layout_below="@+id/signer_campo_senha_aleatoria"
                android:layout_marginTop="10dp"
                android:onClick="voltar"
                android:text="Voltar" />

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>