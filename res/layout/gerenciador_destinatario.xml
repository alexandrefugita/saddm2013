<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <Button
        android:id="@+id/gerenciador_destinatario_botao_escolher_arquivo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp"
        android:onClick="sincronizar"
        android:text="Sincronizar" />

    <TextView
        android:id="@+id/gerenciador_destinatario_text_lista_vazia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gerenciador_destinatario_botao_escolher_arquivo"
        android:layout_marginTop="19dp"
        android:text="Nenhum arquivo disponÃ­vel."
        android:visibility="gone" />

    <ScrollView
        android:id="@+id/gerenciador_destinatario_scrollview_lista"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/gerenciador_destinatario_botao_escolher_arquivo"
        android:layout_marginTop="19dp"
        android:scrollbars="vertical" >

        <LinearLayout
            android:id="@+id/gerenciador_destinatario_linearlayout_lista"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <ListView
                android:id="@+id/gerenciador_destinatario_lista"
                android:layout_width="match_parent"
                android:layout_height="185dp"
                android:layout_marginTop="23dp"
                android:layout_weight="119.52" >
            </ListView>
        </LinearLayout>

    </ScrollView>

</RelativeLayout>